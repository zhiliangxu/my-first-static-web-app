{
  "routes": [
    {
      "route": "/confidential/*",
	  "serve": "/confidential.html",
      "allowedRoles": ["administrator"]
    },
    {
      "route": "/login",
      "serve": "/.auth/login/github"
    },
    {
      "route": "/.auth/login/twitter",
      "statusCode": "404"
    },
    {
      "route": "/logout",
      "serve": "/.auth/logout"
    }
  ],
  "platformErrorOverrides": [
    {
      "errorType": "NotFound",
      "serve": "/custom-404.html"
    },
    {
      "errorType": "Unauthenticated",
      "statusCode": "302",
      "serve": "/login"
    }
  ],
  "defaultHeaders": {
    "Content-Security-Policy-Report-Only": "script-src 'self' 'nonce-12345' 'sha256-1fPOt+dYqFLBDGt7LFJjlntMqtc4XpXzn3qYhmHUTEs='"
  }
}
